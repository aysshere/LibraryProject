@{
    ViewData["Title"] = "Home Page";
}




<div class="text-center">
    <div id="carouselExampleCaptions" class="carousel slide">

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/img/kütüphane3.jpg" height="400px" class="d-block w-100" alt="sinema">
                <div class="carousel-caption d-none d-md-block">

                    <p style="font-size: 24px;">Unlock the Doors to Knowledge.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/img/kütüphane2.jpg" height="400px" class="d-block w-100" alt="mısır">
                <div class="carousel-caption d-none d-md-block">
                    <p style="font-size: 24px;">Every Book, a New Adventure</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/img/kütüphane1.jpg" height="400px" class="d-block w-100" alt="salon">
                <div class="carousel-caption d-none d-md-block">
                    <p style="font-size: 24px;">Reading is Discovering the World</p>

                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!-- Three columns of text below the carousel -->
    <div class="row mt-3">
        <div class="col-lg-4">
            <img src="/img/kütüphane4.jpg" class="rounded-circle" width="140px" height="140px" />
            <h2 class="fw-normal"></h2>
            <p></p>
            <p><a class="btn btn-primary" href="/Book/Index">AllBooks</a></p>
        </div>
        <div class="col-lg-4">
            <img src="/img/kütüphane5.jpg" class="rounded-circle" width="140px" height="140px" />
            <h2 class="fw-normal"></h2>
            <p></p>
            <p><a class="btn btn-primary" href="/Book/AddBook">UploadBooks</a></p>
        </div>
        <div class="col-lg-4">
            <img src="/img/kütüphane6.jpg" class="rounded-circle" width="140px" height="140px" />
            <h2 class="fw-normal"></h2>
            <p></p>
            <p><a class="btn btn-primary" href="/Book/Index">Report</a></p>
        </div>
    </div><!-- /.row -->
    <div class="penguin">
        <div class="penguin-bottom">
            <div class="right-hand"></div>
            <div class="left-hand"></div>
            <div class="right-feet"></div>
            <div class="left-feet"></div>
        </div>
        <div class="penguin-top">
            <div class="right-cheek"></div>
            <div class="left-cheek"></div>
            <div class="belly"></div>
            <div class="right-eye">
                <div class="sparkle"></div>
            </div>
            <div class="left-eye">
                <div class="sparkle"></div>
            </div>
            <div class="blush-right"></div>
            <div class="blush-left"></div>
            <div class="beak-top"></div>
            <div class="beak-bottom"></div>
        </div>
    </div>
</div>




