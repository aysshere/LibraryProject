@model ViewBooksModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Kitap Adı</th>
            <th scope="col">Kitap Kodu</th>
            <th scope="col">Yazar</th>
            <th scope="col">Kitap Sayfa Sayısı</th>
            <th scope="col">Yayın Evi,</th>
            <th scope="col">İşlemler</th>
            <th scope="col">Kitap Adeti</th>
            
        </tr>
    </thead>
    <select class="form-select" aria-label="Default select example">
        <option selected>Open this select menu</option>
        <option value="1">bilim kurgu</option>
        <option value="2">psikoloji</option>
        <option value="3">tarih</option>
    </select>
    <tbody>
        @foreach (var books in Model.ListBooks)
        {
            <tr>
            <td>@books.Name</td>
            <td>@books.BookCode </td>
            <td>@books.Author</td>
            <td>@books.PageNumber</td>
            <td>@books.Publisher</td>
            <td>@books.Total</td>

                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@books.Id" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                    
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Index" method="post">
    <div class="row">
        <div class="col">
            <input type="text" class="form-control" placeholder="Kitap Adi" id="Name" name="Name">
        </div>
        <div class="col">
            <input type="text" class="form-control" placeholder="Yazar" id="Author" name="Author">
        </div>
        <div class="col">
            <input type="text" class="form-control" placeholder="Yayın Evi" id="Publisher" name="Publisher">
        </div>
        <div class="col">
            <input type="number" class="form-control" placeholder="Toplam Sayfa Sayısı" id="PageNumber" name="PageNumber">
        </div>
        <div class="col">
            <input type="text" class="form-control" placeholder="Kitap Kodu" id="BookCode" name="BookCode">
        </div>
        <div class="col">
            <input type="number" class="form-control" placeholder="Kitap Adeti" id="Total" name="Total">
        </div>
        <div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">Card with stretched link</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="#" class="btn btn-primary stretched-link">Go somewhere</a>
  </div>

</div>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <button type="submit" class="btn btn-success">Oluştur</button>
    
</form>

