@using Entity.ViewModels
@model List<BookViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        @foreach (var books in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 18rem;">
                    <form asp-controller="Cart" asp-action="Add" method="get">
                        <input type="hidden" name="Id" value="@books.Id" />
                        <div class="card-header text-center">
                            <h5 class="card-title">@books.Name</h5>
                        </div>
                        <a href="/Movie/Details/@books.Id">
                            <img src="@books.ImageUrl" class="card-img-top" title="@books.Name" alt="@books.Name" />
                        </a>
                        <div class="card-body text-center">
                            <span class="card-text">@string.Format("{0:C2}", books.Price)</span>
                            <input name="Adet" class="text-center" type="number" value="1" min="1" max="@books.StockNumber" />
                        </div>
                        <div class="card-footer text-center">
                            <button type="submit" class="btn btn-primary">
                                Sepete at
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus-fill" viewBox="0 0 16 16">
                                    <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0m7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0M9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0" />
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="bookModal-@books.Id" tabindex="-1" role="dialog" aria-labelledby="bookModalLabel-@books.Id" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="bookModalLabel-@books.Id">@books.Name</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>@books.Description</p>
                            <p>  kitap cok satanlarda </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                            <button type="button" class="btn btn-success">Sepete Ekle</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

