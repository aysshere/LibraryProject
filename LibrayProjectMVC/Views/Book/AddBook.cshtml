@model Entity.ViewModels.BookViewModel

@{
    ViewData["Title"] = "AddBook";
}

<h1>Add Book</h1>

<form asp-action="AddBook" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author" class="control-label"></label>
        <textarea asp-for="Author" class="form-control"></textarea>
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Publisher" class="control-label"></label>
        <textarea asp-for="Publisher" class="form-control"></textarea>
        <span asp-validation-for="Publisher" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PageNumber" class="control-label"></label>
        <textarea asp-for="PageNumber" class="form-control"></textarea>
        <span asp-validation-for="PageNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StockNumber" class="control-label"></label>
        <textarea asp-for="StockNumber" class="form-control"></textarea>
        <span asp-validation-for="StockNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <textarea asp-for="CategoryId" class="form-control"></textarea>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label">Book Image</label>
        <input asp-for="ImageUrl" type="file" class="form-control-file" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Add other fields as necessary -->

    <button type="submit" class="btn btn-primary">Add Book</button>
</form>
