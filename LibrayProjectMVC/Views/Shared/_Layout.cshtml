@using Entity.Identity
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager
@inject SignInManager<AppUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspNetCoreMvc_eTicaret_MovieSales</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AspNetCoreMvc_eTicaret_MovieSales.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/IndexHome.css" asp-append-version="true" />

</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kütüphane</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="mainMenuDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Menü
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="mainMenuDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Book" asp-action="Index">Kitaplar</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Book" asp-action="AddBook">Kitap Ekle</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Category" asp-action="AddCategory">Kategori Ekle</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Category" asp-action="Index">Kategoriler</a></li>
                            </ul>
                        </li>
                    </ul>
                    <div id="cart" class="me-2">
                        <a class="text-white text-decoration-none" asp-action="Index" asp-controller="Cart">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-cart-fill" viewBox="0 0 16 16">
                                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                            </svg>
                            sepet(
                            @if (TempData["ToplamAdet"] != null)
                            {
                                @TempData["ToplamAdet"]
                            }
                            )
                        </a>
                    </div>
                    <form asp-action="Index" asp-controller="Book" class="d-flex" role="search">
                        <input name="search" class="form-control me-2" type="search" placeholder="Kitap ara" aria-label="Search">
                        <button class="btn btn-warning" type="submit">Ara</button>
                    </form>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var user = await UserManager.GetUserAsync(User);

                            
                                
                                    <li><a class="dropdown-item" asp-action="MyProfile" asp-controller="Account">My Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a></li>
                                
                            
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-action="Login" asp-controller="Account">
                                    <i class="fas fa-lock"></i> Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-action="Register" asp-controller="Account">
                                    Hesap Oluştur
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-md-2">
                    @RenderSection("GenreMenu", false)
                </div>
                <div>
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2024 - Copyright Birght-17 FullStack Yazılım - <a asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
